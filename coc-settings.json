    "java.configuration.runtimes": [
        {
            "name": "JavaSE-1.8",
            "path": "~/.jenv/versions/1.8.0.211"
        },
        {
            "name": "JavaSE-9",
            "path": "~/.jenv/versions/9.0.4"
        },
        {
            "name": "JavaSE-13",
            "path": "~/.jenv/versions/13.0.1",
            "default": true
        }
    ]
